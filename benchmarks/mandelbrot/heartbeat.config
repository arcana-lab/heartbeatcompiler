CHUNKSIZE ?= 32
MACROS_HEARTBEAT += -DCHUNKSIZE=$(CHUNKSIZE)
PASS_ARGUMENTS_HEARTBEAT_COMPILER += -chunksize $(CHUNKSIZE)

ACC_JUSTIFY_CHUNKING ?= false
ifeq ($(ACC_JUSTIFY_CHUNKING), true)
  MACROS += -DACC_JUSTIFY_CHUNKING
endif

ACC_JUSTIFY_COMPOSED ?= false
ifeq ($(ACC_JUSTIFY_COMPOSED), true)
  MACROS += -DACC_JUSTIFY_COMPOSED
endif
